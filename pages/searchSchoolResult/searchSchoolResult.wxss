/* pages/searchSchoolResult/searchSchoolResult.wxss */

.rank {
  width: 100%;
}

.rank .content {
  position: relative;
  margin: 16rpx auto 41rpx;
  width: 690rpx;
}

.rank image {
  width: 690rpx;
  height: 175rpx;
}

.content .top {
  width: 690rpx;
  text-align: center;
  position: absolute;
  top: 78rpx;
}

.content .bottom {
  width: 690rpx;
  text-align: center;
  position: absolute;
  top: 120rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.main {
  border-top: 20rpx solid #efefef;
}

.title {
  margin-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666;
}

.table {
  padding: 0rpx 30rpx 41rpx;
  font-size: 24rpx;
}

.table-hd {
  display: flex;
  display: -webkit-flex;
  background: #7088fc;
  font-size: 28rpx;
  color: #fff;
}

.hd-item {
  flex: 1;
  text-align: center;
  padding: 13rpx 8rpx;
  border-left: 1px solid #0f0f0f;
  border-top: 1px solid #0f0f0f;
}

.hd-item:last-child {
  border-right: 1px solid #0f0f0f;
}

.table-row {
  display: flex;
  display: -webkit-flex;
  border-top: 1px solid #0f0f0f;
}

.table-row:last-child {
  border-bottom: 1px solid #0f0f0f;
}

.table-col {
  flex: 1;
  text-align: center;
  padding: 12rpx 8rpx;
  border-left: 1px solid #0f0f0f;
}

.table-col:last-child {
  border-right: 1px solid #0f0f0f;
}
