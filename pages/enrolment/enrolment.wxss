/* pages/enrolment/enrolment.wxss */
.head{
  position: relative;
  width: 100%;
  height: 398rpx;
}
.head image{
  width: 100%;
  height: 100%;
}
.head .title{
  position: absolute;
  bottom: 0;
  padding-right: 120rpx;
  background: #fff;
  padding-left: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  padding-top:19rpx;
}
.head .title text{
  font-size: 26rpx;
  font-weight: normal;
}
.content{
  /* padding: 34rpx 30rpx 48rpx; */
  padding-top: 61rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.content .title{
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  height: 48rpx;
  line-height: 48rpx;
}
.content .title text{
  display: none;
  margin:0 auto;
  width: 52rpx;
  height: 4rpx;
  background: #f2c512;
}
.content .active{
  color: #333;
}
.content .active text{
  display: block;
}
.content .des{
  margin-top: 4rpx;
   border-top: 1rpx solid #e5e5e5;
   padding: 36rpx 67rpx 0 67rpx; 
}
.des text{
  display: block;
  text-indent:63rpx;

}
.none{
  display: none;
}