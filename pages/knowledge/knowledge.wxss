/* pages/knowledge/knowledge.wxss */
.head{
  position: relative;
  width: 100%;
  height: 398rpx;
}
.head image{
  width: 100%;
  height: 100%;
}
.head .title{
  position: absolute;
  bottom: 0;
  padding-right: 120rpx;
  background: #fff;
  padding-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding-top:19rpx;
}
.head .title text{
  font-size: 26rpx;
  font-weight: normal;
}
.img{
  padding: 0 30rpx 40rpx;
  background: #fff;
}
.img image{
  display: block;
  width: 690rpx;
  height: 511rpx;
}
.table{
  padding: 61rpx 34rpx 43rpx;
  background: #fff;
  font-size: 22rpx;
}
.table-hd{
    display: flex;
    display: -webkit-flex;
    background: #deeaf6;
    font-weight: bold;
}
.hd-item{
    flex: 1;
    text-align: center;
     padding:13rpx 8rpx; 
    border-left: 1px solid #0f0f0f;
    border-top: 1px solid #0f0f0f;
}
.hd-item:last-child{
  border-right: 1px solid #0f0f0f;
}
.table-row{
  display: flex;
    display: -webkit-flex;
    border-top: 1px solid #0f0f0f;
}
.table-row:last-child{
    border-bottom: 1px solid #0f0f0f;
}
.table-col{
    flex: 1;
    text-align: center;
     padding: 12rpx 8rpx; 
    border-left: 1px solid #0f0f0f;
}
.table-col:last-child{
  border-right: 1px solid #0f0f0f;
}