/**index.wxss**/
.tips{
  background:#f5f5f7;
color:#c9c9c9;
text-align:center;
font-size:28rpx;

}
.swiper {
  width: 100%;
  height: 470rpx;
  background: #fff;
}

.swiper image {
  width: 100%;
  display: block;
  height: 363rpx;
  box-shadow: -1px 0px 10px #333;
}

.swiper-item {
  display: block;
  height: 100%;
  padding: 22rpx 20rpx 0;
}

.swiperTitle {
  width: 100%;
  /* height: 75rpx; */
  line-height: 90rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.swiperTitle text {
  font-size: 26rpx;
  color: #666;
  font-weight: normal;
}

.nav {
  margin-top: 20rpx;
  padding-top: 40rpx;
  width: 100%;
  height: 412rpx;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
}

.navItem {
  width: 25%;
  text-align: center;
}

.nav image {
  margin: 0 auto;
  display: block;
  width: 100rpx;
  height: 100rpx;
}

.nav text {
  font-size: 28rpx;
  font-weight: bold;
}

.content {
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 90rpx;
}

.content .item {
  border-bottom: 1rpx solid #d6d6d6;
  padding-bottom: 30rpx;
}

.content .title {
  display: block;
  margin: 33rpx 0 33rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.content image {
  width: 220rpx;
  height: 210rpx;
  float: left;
  margin: 0 20rpx;
}

.content .des {
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  margin-right: 30rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.content .right {
  position: relative;
  height: 210rpx;
}

.content .bottom {
  position: absolute;
  left: 240rpx;
  bottom: 0;
}

.bottom image {
  width: 22rpx;
  height: 22rpx;
  margin-top: 20rpx;
}

.bottom text {
  font-size: 20rpx;
  color: #284179;
  margin: 0 12rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
}

.footer navigator {
  display: inline-block;
  width: 50%;
  line-height: 80rpx;
  text-align: center;
  font-size: 26rpx;
}

.footer navigator:nth-child(2) {
  background: #f3c412;
}
