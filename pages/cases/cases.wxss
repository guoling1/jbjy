/* pages/cases/cases.wxss */
.head{
  position: relative;
  width: 100%;
  height: 398rpx;
}
.head image{
  width: 100%;
  height: 100%;
}
.head .title{
  position: absolute;
  bottom: 0;
  padding-right: 120rpx;
  background: #fff;
  padding-left: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  padding-top:19rpx;
}
.head .title text{
  font-size: 26rpx;
  font-weight: normal;
}
.table{
  padding: 61rpx 30rpx 171rpx;
  background: #fff;
  font-size: 22rpx;
}
.table-hd{
    display: flex;
    display: -webkit-flex;
    background: #ffcc00;
    font-weight: bold;
}
.hd-item{
    flex: 1;
      padding:8rpx 3rpx;  
    border-left: 1px solid #0f0f0f;
    border-top: 1px solid #0f0f0f;
}
.hd-item:last-child{
  border-right: 1px solid #0f0f0f;
}
.table-row{
  display: flex;
    display: -webkit-flex;
    border-top: 1px solid #0f0f0f;
}
.table-row:last-child{
    border-bottom: 1px solid #0f0f0f;
}
.table-col{
    flex: 1;
    font-size: 16rpx;
      padding: 8rpx 3rpx;  
    border-left: 1px solid #0f0f0f;
}
.table-col:last-child{
  border-right: 1px solid #0f0f0f;
}